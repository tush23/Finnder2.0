<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/intro_img"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:paddingTop="8dp"
        app:srcCompat="@drawable/boyintro2" />
    <RelativeLayout
        android:layout_below="@+id/intro_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/intro_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="@string/intro_title_1"
                android:textAllCaps="true"
                android:textColor="@color/ob_header"
                android:textSize="@dimen/header_text_size" />

            <TextView
                android:id="@+id/intro_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/product_sans"
                android:gravity="center"
                android:paddingLeft="@dimen/desc_padding"
                android:paddingRight="@dimen/desc_padding"
                android:text="@string/intro_desc_1"
                android:textColor="@color/ob_desc"
                android:textSize="@dimen/desc_text_size" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>